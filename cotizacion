  <script>
    function cargarCotizacion() {
      const datos = JSON.parse(localStorage.getItem('cotizacion'));
      const subtotal = datos.cantidad * datos.precio;

      // Fecha actual
      document.getElementById('fecha').innerText = new Date().toLocaleDateString('es-MX');

      // Datos del cliente
      document.getElementById('datos-cliente').innerHTML = `
        <strong>Cliente:</strong> ${datos.cliente}<br>
        ${datos.direccion}<br>
        Teléfono: ${datos.telefono}<br>
        Email: ${datos.email}
      `;

      // Tabla
      document.getElementById('tabla-items').innerHTML = `
        <tr>
          <td>${datos.descripcion}</td>
          <td>${datos.cantidad}</td>
          <td>$${Number(datos.precio).toFixed(2)}</td>
          <td>$${subtotal.toFixed(2)}</td>
        </tr>
      `;

      // Total
      document.getElementById('total').innerText = `Total: $${subtotal.toFixed(2)}`;
    }
  </script>

